<%= form_for([@user, @trip]) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date_start %><br />
    <%= f.date_select :date_start %>
  </div>
  <div class="field">
    <%= f.label :date_end %><br />
    <%= f.date_select :date_end %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </div>

  <%= f.fields_for :stops do |builder| %>
    <div class="stops">
      <%= render 'trips/stop_fields', :f => builder %>
    </div>
  <% end %>
  <p><%= link_to_add_fields "Add another stop", f, :stops %></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
