<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @trip.name %>
</p>

<p>
  <b>Date start:</b>
  <%= @trip.date_start %>
</p>

<p>
  <b>Date end:</b>
  <%= @trip.date_end %>
</p>

<p>
  <b>Notes:</b>
  <%= @trip.notes %>
</p>

